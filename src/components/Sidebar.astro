---
import DarkMode from './DarkMode.astro';
---

<div class="menu">
  <ion-icon name="menu-outline"></ion-icon>
  <ion-icon name="close-outline"></ion-icon>
</div>

<div class="barra-lateral">
  <div class="top-bar">
    <div class="brand-logo" id="cloud">
      <img src="/hidroponia.png" alt="Logo" />
      <span>Sistema Hidroponico</span>
    </div>
  </div>
  <div class="dark-mode-container">
    <DarkMode />
  </div>
  <nav class="navegacion">
    <ul>
      <li>
        <a id="inbox" href="/">
          <ion-icon name="home-outline"></ion-icon>
          <span>Dashboard</span>
        </a>
      </li>
      <li>
        <a href="/nivel_agua">
          <ion-icon name="water-outline"></ion-icon>
          <span>Nivel de Agua</span>
        </a>
      </li>
      <li>
        <a href="/temperatura">
          <ion-icon name="thermometer-outline"></ion-icon>
          <span>Temperatura</span>
        </a>
      </li>
      <li>
        <a href="/humedad">
          <ion-icon name="rainy-outline"></ion-icon>
          <span>Humedad</span>
        </a>
      </li>
      <li>
        <a href="/luz">
          <ion-icon name="sunny-outline"></ion-icon>
          <span>Luz</span>
        </a>
      </li>
      <li>
        <a href="/mantenimiento">
          <ion-icon name="hammer-outline"></ion-icon>
          <span>Mantenimiento</span>
        </a>
      </li>
      <li>
        <a href="/configuracion">
          <ion-icon name="settings-outline"></ion-icon>
          <span>Configuración</span>
        </a>
      </li>
      <li class="cerrar_sesion">
        <a href="/api/auth/signout">
          <ion-icon name="log-out-outline"></ion-icon>
          <span>Cerrar Sesión</span>
        </a>
      </li>
    </ul>
  </nav>
  </div>
</div>

<main></main>

<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
<script>
const cloud = document.getElementById("cloud");
const barraLateral = document.querySelector(".barra-lateral");
const spans = document.querySelectorAll("span");
const menu = document.querySelector(".menu");
const main = document.querySelector("main");

if (menu && barraLateral && main && spans) {
    menu.addEventListener("click", () => {
        barraLateral.classList.toggle("max-barra-lateral");
        if (barraLateral.classList.contains("max-barra-lateral")) {
            (menu.children[0] as HTMLElement).style.display = "none";
            (menu.children[1] as HTMLElement).style.display = "block";
        } else {
            (menu.children[0] as HTMLElement).style.display = "block";
            (menu.children[1] as HTMLElement).style.display = "none";
        }
        if (window.innerWidth <= 320) {
            barraLateral.classList.add("mini-barra-lateral");
            main.classList.add("min-main");
            spans.forEach((span) => {
                (span as HTMLElement).classList.add("oculto");
            });
        }
    });
}

if (cloud && barraLateral && main && spans) {
    cloud.addEventListener("click", () => {
        barraLateral.classList.toggle("mini-barra-lateral");
        main.classList.toggle("min-main");
        spans.forEach((span) => {
            (span as HTMLElement).classList.toggle("oculto");
        });
    });
}
</script>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Outfit:wght@500&display=swap');

:root {
    --color-barra-lateral: rgb(255, 255, 255);
    --color-texto-menu: rgb(134, 136, 144);
    --color-menu-hover: rgb(238, 238, 238);
    --color-menu-hover-texto: rgb(0, 0, 0);
    --color-boton: rgb(0, 0, 0);
    --color-boton-texto: rgb(255, 255, 255);
    --color-linea: rgb(180, 180, 180);
    --color-scroll: rgb(192, 192, 192);
    --color-scroll-hover: rgb(134, 134, 134);
    --brand-logo-text: rgb(0, 0, 0);
    --brand-logo-bg: rgb(255, 255, 255);
}

body.dark-mode {
    --color-barra-lateral: rgb(34, 34, 34);
    --color-texto-menu: rgb(200, 200, 200);
    --color-menu-hover: rgb(64, 64, 64);
    --color-menu-hover-texto: rgb(255, 255, 255);
    --color-boton: rgb(255, 255, 255);
    --color-boton-texto: rgb(0, 0, 0);
    --color-linea: rgb(64, 64, 64);
    --color-scroll: rgb(64, 64, 64);
    --color-scroll-hover: rgb(134, 134, 134);
    --brand-logo-text: rgb(255, 255, 255);
    --brand-logo-bg: rgb(34, 34, 34);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Outfit', sans-serif;
}

body {
    height: 100vh;
    width: 100%;
}

.menu {
    position: fixed;
    width: 50px;
    height: 50px;
    font-size: 30px;
    display: none;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    cursor: pointer;
    background-color: var(--color-boton);
    color: var(--color-boton-texto);
    right: 15px;
    top: 15px;
    z-index: 100;
}

.barra-lateral {
    position: fixed;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    width: 250px;
    height: 100%;
    overflow: hidden;
    padding: 20px 15px;
    background-color: var(--color-barra-lateral);
    transition: width 0.5s ease, background-color 0.3s ease, left 0.5s ease;
    z-index: 50;
}

.top-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.brand-logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem;
    color: var(--brand-logo-text);
    background-color: var(--brand-logo-bg);
    transition: color 0.3s ease, background-color 0.3s ease; /* Agrega transiciones solo si las necesitas */
}

.brand-logo img {
    max-height: 18px;
}

.mini-barra-lateral {
    width: 80px;
}

.barra-lateral span {
    width: 100px;
    white-space: nowrap;
    font-size: 18px;
    text-align: left;
    opacity: 1;
    transition: opacity 0.5s ease, width 0.5s ease;
}

.barra-lateral span.oculto {
    opacity: 0;
    width: 0;
}

.barra-lateral .navegacion {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    width: 100%;
    flex-grow: 1;
}

.barra-lateral .navegacion ul {
    width: 100%;
}

.barra-lateral .navegacion li {
    list-style: none;
    display: flex;
    align-items: center;
    margin-bottom: 5px;
    width: 100%;
}

.barra-lateral .navegacion a {
    width: 100%;
    height: 45px;
    display: flex;
    align-items: center;
    text-decoration: none;
    border-radius: 10px;
    color: var(--color-texto-menu);
}

.barra-lateral .navegacion a:hover {
    background-color: var(--color-menu-hover);
    color: var(--color-menu-hover-texto);
}

.barra-lateral .navegacion ion-icon {
    min-width: 50px;
    font-size: 20px;
}

.barra-lateral .linea {
    width: 100%;
    height: 1px;
    margin-top: 15px;
    background-color: var(--color-linea);
}

/* Centrar el contenedor del modo oscuro */
.dark-mode-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px 0;
}

main {
    margin-left: 250px;
    padding: 20px;
    transition: margin-left 0.5s ease;
    background: inherit;
}

main.min-main {
    margin-left: 80px;
}

@media (max-width: 600px) {
    .barra-lateral {
        position: fixed;
        left: -250px;
    }
    .max-barra-lateral {
        left: 0;
    }
    .menu {
        display: flex;
    }
    .menu ion-icon:nth-child(2) {
        display: none;
    }
    main {
        margin-left: 0;
    }
    main.min-main {
        margin-left: 0;
    }
}

</style>