---
const { bgFirst, bgSecond, route, title, subtitle, valor, fecha, hora } = Astro.props;
---

<div class="card" style={`--bgFirst: ${bgFirst}; --bgSecond: ${bgSecond};`}>
    <div class="card-content">
        <a href={route} class="card-link">
            <div class="card-header">{title}</div>
            <div class="card-info">{valor}</div>
            <div class="card-subtitle">{subtitle}</div>
            <div class="card-data">Fecha: {fecha}</div>
            <div class="card-data">Hora: {hora}</div>
        </a>
    </div>
</div>

<style>
    .card {
      display: flex;
      flex-direction: column;
      background: linear-gradient(to bottom right, var(--bgFirst), var(--bgSecond));
      border-radius: 10px;
      padding: 20px;
      color: white;
      text-align: center;
      transition: transform 0.2s;
    }
  
    .card:hover {
      transform: scale(1.05);
    }
  
    .card-header {
      font-size: 2rem;
      font-weight: 700;
    }

    .card-info {
      font-size: 2rem;
      font-weight: 700;
    }
  
    .card-subtitle {
      font-size: 1.4rem;
      margin: 10px 0;
      font-weight: 600;
    }

    .card-data {
      font-size: 1.2rem;
      margin: 10px 0;
      font-weight: 300;
    }
  
    .card-link {
      color: inherit;
      text-decoration: none;
    }

    .card-button {
      margin-top: 20px;
      padding: 10px 15px;
      background-color: rgba(255, 255, 255, 0.2);
      border: none;
      border-radius: 5px;
      cursor: pointer;
      text-transform: uppercase;
    }
  
    .card-button a {
      color: white;
      text-decoration: none;
    }
  
    @media (min-aspect-ratio: 9/18.5) {
      .card {
        flex-direction: row;
        text-align: left;
      }
  
      .card-content {
        flex: 1;
        margin-right: 20px;
      }
  
      .card-info {
        font-size: 1.8rem;
      }
    }

    body.light-mode .card {
      color: black;
    }

    body.dark-mode .card {
      color: white;
    }
</style>
